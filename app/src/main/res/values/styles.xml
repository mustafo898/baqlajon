<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SplashScreen" parent="Theme.Baqlajon">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:navigationBarColor">@color/blue</item>
    </style>

    <style name="NightTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="colorPrimary">@color/n_color_primary</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="colorPrimaryDark">@color/n_color_primary_dark</item>
        <item name="colorAccent">@color/n_color_accent</item>
        <item name="android:textColorSecondary">@color/n_secondary_text_color</item>
    </style>

    <style name="ClassicTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/cl_color_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/cl_color_accent</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textColorSecondary">@color/cl_secondary_text_color</item>
    </style>

    <style name="Theme.MyTheme" parent="Theme.Baqlajon">
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="corner_circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/grey5</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="main_card" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_color</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="toolbar_text_style">
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:fontFamily">@font/roboto_500</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="border_field_registration">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">@color/border_field_registration</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="ImageViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="layout_constraintDimensionRatio">H,1:1</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.circleImageView</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="IconButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>

    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/cl_color_primary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/cl_color_accent</item>
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


</resources>